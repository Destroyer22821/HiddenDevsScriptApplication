local Pdisable = game.ReplicatedStorage.Arrest.Pdisable
local PActive = game.ReplicatedStorage.Arrest.PActive
local on = false
Pdisable.OnServerEvent:Connect(function(plr) --event will receive when certain tools are equipped (Handcuffs, Weapons,...); then it will destroy the protection 
	if on == false then
	local char2 = plr.Character
		if char2 then
			local p = char2:FindFirstChild("Protection")
				if p then
				p:Destroy()
				on = true
			end
		end
	else	
		print("onfalse")
		on = false
		wait(15)
		on = true
	end
end)
PActive.OnServerEvent:Connect(function(plr) --reactive protection
	print("aco")
	local char2 = plr.Character
	if char2 then
		wait(12)
		if on == true then
			if char2:FindFirstChild("Protection")  then
				else
				local force = Instance.new("ForceField")
				force.Parent = char2
				force.Name = "Protection"
				force.Visible = false
				print("Protection set")
				on = false
			end
		end
	end
end)
